<!DOCTYPE html>
<html>
<head>
  <title>EbuOndemand</title>
  <%= stylesheet_link_tag    "#{request.headers["HTTP_X_PLUGIT_BASE_URL"]}media/application", media: "all", "data-turbolinks-track" => true %>
  <%= yield :additional_styles %>
  <%= javascript_include_tag "#{request.headers["HTTP_X_PLUGIT_BASE_URL"]}media/application", "data-turbolinks-track" => true %>
  <%= yield :additional_scripts %>
  <%#= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body data-controller="<%= "#{params[:controller]}" %>" data-action="<%= "#{params[:action]}" %>">
  <div class="container">
  <%= render 'layouts/navigation' %>

  <div id="plugit_wrapper" data-controller="<%= "#{params[:controller]}" %>" data-action="<%= "#{params[:action]}" %>">
  <main role="main">
      <%= render 'layouts/flash' %>
      <%= yield %>
      
      <% if Rails.env.development? %>
      <pre><%= @plugit_env.inspect %></pre>
      <% end %>
  </main>
  </div>
</div>

<div id="csrf_proxy" data-csrf-param="csrfmiddlewaretoken" data-csrf-token="{~__PLUGIT_CSRF_TOKEN__~}">
  
</body>
</html>
