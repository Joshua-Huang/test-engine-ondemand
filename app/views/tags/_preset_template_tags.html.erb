<input type="text" name="tags" placeholder="Add new tags..." id="preset_template_tags" />

<%= javascript_tag do %>
$('#preset_template_tags').tagsManager({
  AjaxPush: '/<%= Rails.application.config.ebu_plugit_root %>/tags',
  AjaxPushAllTags: true,
  AjaxPushParameters: {
    'csrfmiddlewaretoken': '{~__PLUGIT_CSRF_TOKEN__~}',
    'tag_type': 1
  },
  prefilled: <%= @preset_template_tags.collect(&:name).to_json.html_safe %>
})
<% end %>