<input type="text" name="tags" placeholder="Add new tags..." id="encoding_job_tags" />

<%= javascript_tag do %>
$('#encoding_job_tags').tagsManager({
  AjaxPush: '/<%= Rails.application.config.ebu_plugit_root %>/tags',
  AjaxPushAllTags: true,
  AjaxPushParameters: {
    'csrfmiddlewaretoken': '{~__PLUGIT_CSRF_TOKEN__~}',
    'tag_type': 0
  },
  prefilled: <%= @encoding_job_tags.collect(&:name).to_json.html_safe %>
})
<% end %>