<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @encoding_jobs %>
  </tbody>
</table>

<% if auth_can_write? %>
<%= plugit_link_to "Add encoding job", new_encoding_job_path, class: "btn btn-primary", disabled: !EncodingJob.new_allowed? %>
<% unless EncodingJob.new_allowed? %>
<small><em>At least one file asset, one encoder preset and one post-processing preset need to exist before you can create a new encoding job...</em></small>
<% end %>
<% end %>